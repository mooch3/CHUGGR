<%- include('partials/header'); -%>
<h1 class="friends-header">Find Friends to Follow</h1>
<div id="friendSuccess" class="hidden-div"><p>You followed a new chuggr!</p></div>
<div id="friendFail" class="hidden-div"> <p>You are already chuggin' with this person.</p></div>
<div id="noResult" class="hidden-div"> <p>We couldn't find this chuggr.</p></div>

<form autocomplete="off" action="/friends" method="post" id="friendForm">
  <div class="autocomplete" style="width:300px;">
    <input id="findFriends" type="text" name="findFriends" placeholder="Search a Friend by their First Name">
  </div>
  <button type="button" name="button" class="btn-lg btn-primary" id="addFriend">Add</button>
  <input type="hidden" name="me" value=<%=currentUser%>>
</form>

<h1 class="friends-header">Your Friends</h1>
<div class="friends-grid">
  <%friendsList.forEach(friend => {%>
    <div>
      <img class="friends-grid-pic" src="/images/CHUGGRLogo.png" alt="">
      <br>
      <%=friend.data().userName%>
      <br>
      <br>
      <%=friend.data().firstName%> <%=friend.data().lastName%>
      <br>
      <br>
      <strong><a href="/hub/profile/<%=friend.data().uid%>">View Profile ></a></strong>
    </div>
  <%});%>
</div>
<script src="/scripts/firebasehelper.js"></script>
<script src="/scripts/friends.js"></script>

<%-include('partials/footer'); -%>
